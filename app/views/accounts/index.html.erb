<h3>Wealth Group Accounts</h3>

<table class="table table-striped table-hover " >
  <thead>
    <tr>
      <th>Account Name</th>
      <th>User</th>
      <th>Report</th>
      <th>Action</th>
     </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr class="info">
        <td><%= account.name %></td>
        <td><%= account.user.name %></td>
        <td><%= account.fs.report_class %></td>
        <td><%= link_to 'Show', account %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  Download:
  <%= link_to "CSV", accounts_path(format: "csv") %> 
  <%#= link_to "Excel", accounts_path(format: "xls") %>
</p>

<%= link_to 'New Account', new_account_path, class: "btn btn-success" %>



