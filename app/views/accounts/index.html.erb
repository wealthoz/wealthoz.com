<h4><strong><%= current_user.group.name %>'s Accounts</strong>  
	<%= link_to 'New Account', new_account_path, class: "btn btn-success" %></h4>



<table class="table table-striped table-hover " id="accounts" >
  <thead>
    <tr>
      <th>Account Name</th>
      <th>Report</th>
      <th>Wealth Group</th>
      <th>Actions</th>
      <th> </th>
     </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr class="info">
        <td><%= account.name %></td>
        <td><%= account.fs.report_class %></td>
        <td><%= account.group.name %></td>
        <td><%= link_to 'Edit',  edit_account_path(account) %></td>
        <td><%= link_to 'Show', account %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  Download:
  <%= link_to "CSV", accounts_path(format: "csv") %> 
  <%#= link_to "Excel", accounts_path(format: "xls") %>
</p>

<%= link_to 'New Account', new_account_path, class: "btn btn-success" %>



