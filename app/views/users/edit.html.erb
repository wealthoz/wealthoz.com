<% provide(:title, "Edit user") %>
<h4>Update your profile</h4>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.label :group_id, "Change Your Wealth Group" %>
      <%= f.collection_select(:group_id, Group.all, :id, :name ) %>
	<section>
      <%= f.submit "Save changes", class: "btn btn-large btn-success" %>
    </section>
    <% end %>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>     
  </div>  
    <section>
		<%= link_to "Create New Wealth Group", new_group_path , class: "btn btn-warning" %>
		<h5 class="text-warning">You can have only <strong>one Wealth Group</strong> !!!</h5>
	</section>
	<br />
 
</div>
 
