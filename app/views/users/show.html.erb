<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <p>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <br>
        from the Wealth Group:
        <br>
       <strong><%= @group.name %></strong> 
      </p>
    </section>
	  <section>
		  <div class="span8">
		    <%= render 'shared/projects_info' %>
	  	  </div>  
	 </section>
  </aside>
  
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>

