<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h5>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <br>
        from
        <br>
       <strong><%= @group.name %></strong> 
      </h5>
    </section>
       <section>
      <%= render 'shared/stats' %>
    </section>

       <div class="span8">
  			<%= render 'follow_form' if signed_in? %>
  		<div>
  	
    <section>
    	
    	<h4><%= @group.name %> Memebers <span class="badge"><%= @current_group.all.collect(&:name).count %></span></h4>
   	
    	<strong><%= @current_group.all.collect(&:name).join ", " %></strong>
    	    		    
     </section>
 </aside>
  <div class="span8">
  	
  	<%= render 'shared/projects_info' %>
  <div>
  	
  <div class="span8">
    <% if @user.microposts.any? %>
      <h4>FuturePosts <span class="badge"><%= @user.microposts.count %></span></h4>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>

