<h3>All your Transactions</h3>

<table class="table table-striped table-hover ">
  <thead>
      <tr>
      <th>Account</th>
      <th>User_id</th>
      <th>Post date</th>
      <th>Ammount</th>
      <th>Quantity</th>
      <th></th>
      <th>Actions</th>
      <th></th>
      <th>Text</th>
    </tr>
  </thead>

  <tbody>
    <% @ledgers.each do |ledger| %>
      <tr class="info">
        <td><%= ledger.account.name %></td>
        <td><%= ledger.user_id %></td>
        <td><%= ledger.post_date %></td>
        <td><%= ledger.ammount %></td>
        <td><%= ledger.quantity %></td>
        <td><%= link_to 'Show', ledger %></td>
        <td><%= link_to 'Edit', edit_ledger_path(ledger) %></td>
        <td><%= link_to 'Destroy', ledger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= ledger.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_ledger_path , class: "btn btn-success"%>
