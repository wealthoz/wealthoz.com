%table{:class => "table table-striped table-hover "}
  %thead
    %th Accounts
    - @ledgers_hash.each do |wunit, ledegers|
      %td
        = wunit
    %th Total
  %tbody
    - @accounts.each do |account|
      %tr
        %td
          = account.name
        - @ledgers_hash.each do |k, v|
          %td
            - if v[account.id]
              = v[account.id].map(&:ammount).inject(0, &:+)
        %td
          - if @account_hash[account.id]
            = @account_hash[account.id].map(&:ammount).inject(0, &:+)
    %tr
      %td Total
      - @ledgers_hash.each do |k, v|
        %td
          = v.values.flatten.map(&:ammount).inject(0, &:+)
      %td
        = @account_hash.values.flatten.map(&:ammount).inject(0, &:+)
