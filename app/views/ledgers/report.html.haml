%h4 Balance Sheet by Wealth Units
%table{:class => "table table-striped table-hover "}
  %thead
    %th{:class => "success"} Accounts
    - @ledgers_hash_bs.each do |wunit, ledegers|
      %td
        = wunit
    %th Total
  %tbody
    - @accounts_bs.each do |account|
      %tr{:class => "info"}
        %td
          = account.name
        - @ledgers_hash_bs.each do |k, v|
          %td
            - if v[account.id]
              ="%.2f" % v[account.id].map(&:ammount).inject(0, &:+)
        %td
          - if @account_hash_bs[account.id]
            ="%.2f" % @account_hash_bs[account.id].map(&:ammount).inject(0, &:+)
    %tr{:class => "success"}
      %td 
        %strong Accumulated Wealth
      - @ledgers_hash_bs.each do |k, v|
        %td
          ="%.2f" % v.values.flatten.map(&:ammount).inject(0, &:+)
      %td
        ="%.2f" % @account_hash_bs.values.flatten.map(&:ammount).inject(0, &:+)

</div>
