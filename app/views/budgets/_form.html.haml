= form_tag(budgets_path, remote: true, id: 'new-budget-form' ) do
  %table{:class => "table table-striped table-hover "}
    %tr
      %th
      %th *Account
      %th *Wealth Unit
      %th *Date d.m.y
      %th *Ammount
      %th Text
      %th Action

    %tr.new-budget-row
      = render 'budget_fields'

    %tr.actions
      %td
      %td= submit_tag 'POST',class: "btn btn-large btn-success", id: 'new-budget-form-submit'
      %td= link_to 'Add row', '#', id: '_form',class: "btn btn-large btn-primary"

    %tr.new_budget_row.hidden{:class => ""}
      = render 'budget_fields'
