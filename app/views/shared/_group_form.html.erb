<h1>Create New Wealth Group:</h1>


<%= form_for(@group) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :name, placeholder: "Create a Wealth Group!" %>
    
    <%= f.label :fx_id, "Choose currency" %>
    <%= f.collection_select(:fx_id, Fx.all, :id, :fx ) %>

  </div>
  <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>